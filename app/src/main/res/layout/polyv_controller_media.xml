<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <!-- logo -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/polyv_logo"
        android:visibility="gone" />
    <com.lifeng.mypolyv.player.PolyvPlayerLightView
        android:id="@+id/polyv_player_light_view"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <com.lifeng.mypolyv.player.PolyvPlayerVolumeView
        android:id="@+id/polyv_player_volume_view"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <com.lifeng.mypolyv.player.PolyvPlayerProgressView
        android:id="@+id/polyv_player_progress_view"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <!-- 视频在加载过程中显示的进度条 -->
    <ProgressBar
        android:id="@+id/loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:visibility="gone" />
    <com.easefun.polyvsdk.video.auxiliary.PolyvAuxiliaryVideoView
        android:id="@+id/polyv_auxiliary_video_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!--竖屏布局-->
    <include layout="@layout/polyv_controller_media_port" />
    <!--横屏布局-->
    <include layout="@layout/polyv_controller_media_land" />

</RelativeLayout>